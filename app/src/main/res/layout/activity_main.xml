<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hu.szabosimon.mark.telenyito.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A kapu telefonszáma" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ET_phonenumber"
            android:inputType="phone"
            android:layout_weight = "1"
            android:hint="Válassz a telefonkönyvedből ->"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_contact_phone_black_24dp"
            android:drawableRight="@drawable/ic_add_black_24dp"
            android:layout_weight = "0"
            android:id="@+id/btnPickContact"/>
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Értesítések"
            style="@android:style/TextAppearance.Large"
            android:layout_weight = "1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Értesítés teszt"
            android:id="@+id/btnTest"
            android:layout_weight = "0"/>
    </android.support.v7.widget.LinearLayoutCompat>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ha a közelbe érek"
        android:id="@+id/CB_nearby"/>
</android.support.v7.widget.LinearLayoutCompat>
